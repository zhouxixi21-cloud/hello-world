# Generated by Ansible using network-scripts.default.j2
IPV6INIT=yes
BOOTPROTO=none
DEVICE={{ item.conn_name }}
ONBOOT=yes
TYPE=Ethernet
DEFROUTE=yes
IPV4_FAILURE_FATAL=no
NAME={{ item.conn_name }}
{% for dns in item.dns4 %}DNS{{ loop.index }}={{ dns }}
{% endfor %}
UUID={{ item.uuid }}
{% if item.ipaddr is defined %}IPADDR={{ item.ipaddr }}
{% endif %}
PREFIX=24
{% if item.ipaddr1 is defined %}IPADDR1={{ item.ipaddr1 }}
PREFIX1=24
{% endif %}
{% if item.gateway is defined %}GATEWAY={{ item.gateway }}
{% endif %}
PEERDNS={{ item.peerdns|default('yes') }}
NM_CONTROLLED={{ item.nm_controlled|default('no') }}

